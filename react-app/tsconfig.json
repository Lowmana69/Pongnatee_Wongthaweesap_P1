{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*",
    "src/util/*.d.ts"
  ],
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "noImplicitAny": false,
  "moduleResolution": "node",
  "sourceMap": true,
  "outDir": "dist",
  "baseUrl": "./",
  "rootDirs": [".", "src"],
  "paths": {
    "*": [
      "node_modules/*",
      "src/types/*"            ]
  }
}
